{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block monTitre %}Liste des personnages{% endblock %}

{% block body %}
<table class="table">
    <tr class="thead-dark">
        <th>Image</th>
        <th>Nom</th>
        <th>Age</th>
        <th>Sexe</th>
        <th>Force</th>
        <th>Agilit√©</th>
        <th>Intelligence</th>
    </tr>
    {% for joueur in joueurs %}
        <tr>
            <td><img src="{{asset('images/personnages/' ~ joueur.nom ~ '.png')}}"</td>
            <td><a href="{{ path('afficher_personnage', {'nom' : joueur.nom|lower}) }}">{{ joueur.nom }}</a></td>
            <td>{{ joueur.age }}</td>
            <td>
                {% if joueur.sexe %}
                    Homme
                {% else %}
                    Femme
                {% endif %}
            </td>
            <td>{{ joueur.caracteristiques.force }}</td>
            <td>{{ joueur.caracteristiques.agilite }}</td>
            <td>{{ joueur.caracteristiques.intelligence }}</td>
        </tr>
    {% endfor %}
</table>

{% endblock %}
